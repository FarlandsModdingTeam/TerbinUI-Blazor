@getText()

@code
{
    [Parameter]
    public ushort Key { get; set; } = 0;

    private string _traducido = string.Empty;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        TerbinUI_Blazor.Script.ManagaIdioma.OnLanguageChanged += OnChangeIdioma;
    }
    public void Dispose()
    {
        TerbinUI_Blazor.Script.ManagaIdioma.OnLanguageChanged -= OnChangeIdioma;
    }

    private string getTraducion(ushort eKey)
    {
        return TerbinUI_Blazor.Script.ManagaIdioma.GetText(eKey);
    }

    private void translate()
    {
        _traducido = getTraducion(Key);
    }

    private string getText()
    {
        translate();
        return _traducido;
    }

    private void OnChangeIdioma()
    {
        InvokeAsync(() =>
        {
            StateHasChanged();
            translate();
        });
    }
}
